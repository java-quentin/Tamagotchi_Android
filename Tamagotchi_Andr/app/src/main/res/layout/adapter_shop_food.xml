<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="@dimen/example_medium_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_icon_shop"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/icon_pomme"/>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/item_default_name"
            android:layout_toRightOf="@id/item_icon_shop"/>

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/item_default_price"
            android:layout_below="@id/item_name"
            android:layout_toRightOf="@id/item_icon_shop"/>

        <TextView
            android:id="@+id/item_saturation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/item_default_saturation"
            android:layout_below="@id/item_price"
            android:layout_toRightOf="@id/item_icon_shop"/>

        <Button
            android:id="@+id/item_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:translationY="5dp"
            android:text="Buy"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:background="@drawable/button_border_black"/>
    </RelativeLayout>

</RelativeLayout>
