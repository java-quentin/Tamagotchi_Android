<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/versus">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to rock paper scissors game !\n Click on the rock, paper or scissors image for play !"
                android:gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/user_choice_rock_paper_scissors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your choice"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:textColor="@android:color/white"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"/>

                <ImageView
                    android:id="@+id/vex_choice_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/vex"
                    android:translationX="50dp"
                    android:layout_toEndOf="@id/user_choice_rock_paper_scissors"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/vex_choice_rock_paper_scissors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vex choice"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:textColor="@android:color/white"
                    android:shadowColor="@android:color/black"
                    android:shadowDx="10"
                    android:shadowDy="10"
                    android:shadowRadius="10"/>

                <ImageView
                    android:id="@+id/user_choice_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/allay_rps"
                    android:translationX="-50dp"
                    android:layout_toStartOf="@id/vex_choice_rock_paper_scissors"
                    android:layout_marginEnd="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"/>

            <TextView
                android:id="@+id/choose_rock_paper_scissors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/rock"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/rock" />

                <ImageView
                    android:id="@+id/paper"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/paper" />

                <ImageView
                    android:id="@+id/scissors"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/scissors" />
            </LinearLayout>

            <Button
                android:id="@+id/button_back_rock_paper_scissors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:background="@drawable/button_border_black"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:textColor="@android:color/white"
                android:shadowColor="@android:color/black"
                android:shadowDx="10"
                android:shadowDy="10"
                android:shadowRadius="10" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
